
public class ControlFlowIf {

	public static void main(String[] args) {
		int x = 10;
		int y = 22;
		
		if(x>y){
			System.out.println("X < Y");
		}
		
		int numberCheck = 22;
		
		if(numberCheck % 2 == 0){
			System.out.println(numberCheck + " is even");
		}else{
			System.out.println(numberCheck + " is odd");
		}

	}

}
