
public class OperatorsMath {


	public static void main(String[] args) {
		double num1 = 0.4;
		double num2 = 0.3;
		double result;
		char operators = '+';
		char operatorMinus = "-";
		char operatorMult = "*";
		char operatorDiv = "/";
		char operatorMod = "%";
		result = num1 + num2;
		System.out.println(num1 + " "+operators+ " "+num2+ " = "+result);
		
		System.out.println(num1 + " "+operatorMinus+ " "+num2+ " = "+result);
		
		System.out.println(num1 + " "+operatorMult+ " "+num2+ " = "+result);
		
		System.out.println(num1 + " "+operatorDiv+ " "+num2+ " = "+result);
		
		System.out.println(num1 + " "+operatorMod " "+num2+ " = "+result);
		
	}

}
